{
	"name": "claims-sdk",
	"version": "1.0.0",
	"description": "An SDK for solving disputes in a decentralized way using Ethereum blockchain",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"license": "GPL-3.0",
	"engines": {
		"npm": ">=5",
		"node": ">=8.9.0"
	},
	"scripts": {
		"test": "mocha --timeout 200000",
		"build": "./node_modules/.bin/tsc && tscpaths -p tsconfig.json -s ./src -o ./dist ",
		"lint": "tslint --project tsconfig.json",
		"prepare-contracts": "typechain --target=legacy"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run build && git add dist"
		}
	},
	"devDependencies": {
		"@types/node": "^10.14.6",
		"chai": "^4.2.0",
		"husky": "2.1.0",
		"mocha": "^6.1.4",
		"tslib": "^1.9.3",
		"tslint": "^5.16.0",
		"tslint-config-airbnb": "^5.11.1",
		"tslint-lines-between-class-members": "^1.3.1",
		"typechain": "^0.3.14",
		"typescript": "^3.4.5"
	},
	"dependencies": {
		"abi-decoder": "^1.2.0",
		"bignumber.js": "^8.1.1",
		"tscpaths": "0.0.7"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/monetha/claims-js-sdk.git"
	},
	"author": "Monetha",
	"_moduleAliases": {
		"src": "dist"
	}
}
